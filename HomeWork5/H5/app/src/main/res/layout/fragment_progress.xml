<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressFragment">

    <!-- 用 FrameLayout 疊加圓形進度與置中文字 -->
    <FrameLayout
        android:id="@+id/ringContainer"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/circleProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"
            app:indicatorSize="220dp"
            app:trackThickness="14dp"
            app:trackCornerRadius="14dp"
            app:showAnimationBehavior="inward"
            app:hideAnimationBehavior="outward"
            app:trackColor="?attr/colorOnSurfaceVariant"
            />

        <!-- 置中的百分比 -->
        <TextView
            android:id="@+id/percentLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0%"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </FrameLayout>

    <!-- 狀態訊息（沿用你的 txt） -->
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="準備中"
        app:layout_constraintTop_toBottomOf="@id/ringContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>